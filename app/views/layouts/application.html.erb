<!DOCTYPE html>
<html>
  <head>
    <title>Taskleaf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="app-title navbar navbar-expand-md navbar-light bg-secondary">
      <div class="navbar-brand text-info">Tasklraf</div>
      <ul class="navbar-nav ml-auto">
        <% if current_user %>
        <li class="nav-item">
          <%= link_to 'タスク一覧',tasks_path, class: 'nav-link text-white' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ユーザー一覧', admin_users_path, class: 'nav-link text-white' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link text-white' %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to 'ログイン', login_path, class: 'nav-link text-white' %>
        </li>
        <% end %>
      </ul>
    </nav>

    <div class="container">
      <% if flash.notice.present? %>
      <div style="alert alert-success">
        <%= flash.notice %>
      </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
